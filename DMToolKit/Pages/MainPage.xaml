<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DMToolKit.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             x:Class="DMToolKit.Pages.MainPage"
             Title="Home Page">
    <StackLayout>
        <Border HorizontalOptions="Center" StrokeShape="RoundRectangle 200" Padding="15"
                BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary},Dark={StaticResource Primary}}"
                Stroke="{AppThemeBinding Light={StaticResource Tertiary},Dark={StaticResource Primary}}">
            <Image Source="{AppThemeBinding Light='appicon.png',Dark='appicondark.png'}" HeightRequest="200" WidthRequest="200"/>
        </Border>
        
        <Button Text="Name Generator" Command="{Binding GoToNameGeneratorCommand}" Margin="0,1,0,2"/>
        <Button Text="NPC Generator" Command="{Binding GoToNPCGeneratorCommand}" Margin="0,1,0,2"/>
        <Button Text="Coin Pouch Generator" Command="{Binding GoToCoinPouchGeneratorCommand}" Margin="0,1,0,2"/>
        <Button Text="Name Lists" Command="{Binding GoToListPageCommand}" Margin="30,1,30,2"/>
    </StackLayout>
</ContentPage>
