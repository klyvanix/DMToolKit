<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMToolKit.Pages.ListManagerPage"
             xmlns:viewmodel="clr-namespace:DMToolKit.ViewModels"
             x:DataType="viewmodel:ListManagerViewModel"
             Title="List Manager">
    <Grid RowDefinitions="*,50">
        <VerticalStackLayout Grid.Row="0">
            <Button Text="Masculine Names" Margin="5" Command="{Binding GoToMasculineListCommand}"/>
            <Button Text="Feminine Names" Margin="5" Command="{Binding GoToFeminineListCommand}"/>
            <Button Text="Last Names" Margin="5" Command="{Binding GoToLastNameListCommand}"/>
            <Button Text="Add Prefix" Margin="5" Command="{Binding GoToPrefixListCommand}"/>
            <Button Text="Add Suffix" Margin="5" Command="{Binding GoToSuffixListCommand}"/>
            <Button Text="Character List" Margin="5" Command="{Binding GoToNPCListCommand}"/>
        </VerticalStackLayout>
        <Button Grid.Row="1" Text="Back" Margin="0,1,0,2" Command="{Binding GoBackCommand}"/>
    </Grid>
</ContentPage>