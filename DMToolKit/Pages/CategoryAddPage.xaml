<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMToolKit.Pages.CategoryAddPage"
             xmlns:viewmodel="clr-namespace:DMToolKit.ViewModels"
             x:DataType="viewmodel:CategoryAddViewModel"
             Title="Add Category">
    <Grid RowDefinitions="*,50">
        <VerticalStackLayout>
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource Dark}}" StrokeShape="RoundRectangle 10" Margin="10,10,10, 5">
                <Entry Placeholder="Enter Category" Text="{Binding CategoryName}" HorizontalOptions="Fill" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                       VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="18" PlaceholderColor="{StaticResource Gray500}"/>
            </Border>
            <Button HorizontalOptions="Fill" Text="Add Category" VerticalOptions="Center" Command="{Binding AddCategoryCommand}" />
        </VerticalStackLayout>

        <Button Grid.Row="1" HorizontalOptions="Fill" Text="Go Back" VerticalOptions="Center" Command="{Binding GoBackCommand}" Margin="0,1"/>
    </Grid>
</ContentPage>