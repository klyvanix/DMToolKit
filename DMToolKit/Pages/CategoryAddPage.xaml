<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMToolKit.Pages.CategoryAddPage"
             xmlns:viewmodel="clr-namespace:DMToolKit.ViewModels"
             x:DataType="viewmodel:CategoryAddViewModel"
             Title="CategoryAddPage">
    <Grid RowDefinitions="*,40">
        <VerticalStackLayout>
            <Entry Placeholder="Category Name" Text="{Binding CategoryName}" HorizontalOptions="Fill" TextColor="{StaticResource White}"
                   VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="18"/>
            <Button HorizontalOptions="Fill" Text="Add Category" VerticalOptions="Center" Command="{Binding AddCategoryCommand}" />
            <Button HorizontalOptions="Fill" Text="Go Back" VerticalOptions="Center" Command="{Binding GoBackCommand}" Margin="0,10"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>